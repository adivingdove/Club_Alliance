<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.uclub_backend.mapper.ClubMapper">

    <!-- 结果映射 -->
    <resultMap id="ClubResultMap" type="com.example.uclub_backend.entity.Club">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="logo_url" property="logoUrl"/>
        <result column="tags" property="tags"/>
        <result column="creator_id" property="creatorId"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, name, logo_url, tags, creator_id, description, status, created_at
    </sql>

    <!-- 获取所有社团 -->
    <select id="selectAll" resultMap="ClubResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM club
        ORDER BY created_at DESC
    </select>

    <!-- 根据ID获取社团 -->
    <select id="selectById" parameterType="long" resultMap="ClubResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM club
        WHERE id = #{id}
    </select>

    <!-- 根据状态获取社团 -->
    <select id="selectByStatus" parameterType="string" resultMap="ClubResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM club
        WHERE status = #{status}
        ORDER BY created_at DESC
    </select>

    <!-- 根据标签获取社团 -->
    <select id="selectByTags" parameterType="string" resultMap="ClubResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM club
        WHERE tags = #{tags}
        ORDER BY created_at DESC
    </select>

    <!-- 搜索社团 -->
    <select id="searchByKeyword" parameterType="string" resultMap="ClubResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM club
        WHERE name LIKE CONCAT('%', #{keyword}, '%')
        OR description LIKE CONCAT('%', #{keyword}, '%')
        ORDER BY created_at DESC
    </select>

    <!-- 插入社团 -->
    <insert id="insert" parameterType="com.example.uclub_backend.entity.Club" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO club (
        name, logo_url, tags, creator_id, description, status, created_at
        ) VALUES (
        #{name}, #{logoUrl}, #{tags}, #{creatorId}, #{description}, #{status}, NOW()
        )
    </insert>

    <!-- 更新社团 -->
    <update id="update" parameterType="com.example.uclub_backend.entity.Club">
        UPDATE club
        SET name = #{name},
        logo_url = #{logoUrl},
        tags = #{tags},
        description = #{description},
        status = #{status}
        WHERE id = #{id}
    </update>

    <!-- 删除社团 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM club WHERE id = #{id}
    </delete>

    <!-- 检查社团名称是否存在 -->
    <select id="existsByName" parameterType="string" resultType="boolean">
        SELECT COUNT(*) > 0 FROM club WHERE name = #{name}
    </select>

</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.uclub_backend.forum.mapper.ReportMapper">

    <!-- 分页查询 + 模糊搜索 -->
    <select id="selectReports" resultType="com.example.uclub_backend.forum.entity.Report">
        SELECT * FROM report
        <where>
            <if test="status != null and status != ''">
                status = #{status}
            </if>
            <if test="keyword != null and keyword != ''">
                AND reason LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{size} OFFSET #{offset}
    </select>

    <!-- 总记录数 -->
    <select id="countReports" resultType="int">
        SELECT COUNT(*) FROM report
        <where>
            <if test="status != null and status != ''">
                status = #{status}
            </if>
            <if test="keyword != null and keyword != ''">
                AND reason LIKE CONCAT('%', #{keyword}, '%')
            </if>
        </where>
    </select>

    <!-- 获取所有（不分页） -->
    <select id="getAllReports" resultType="com.example.uclub_backend.forum.entity.Report">
        SELECT * FROM report
        <where>
            <if test="status != null and status != ''">
                status = #{status}
            </if>
        </where>
        ORDER BY created_at DESC
    </select>

    <!-- 获取单个举报 -->
    <select id="getReportById" resultType="com.example.uclub_backend.forum.entity.Report">
        SELECT * FROM report WHERE id = #{id}
    </select>

    <!-- 更新状态 -->
    <update id="updateReportStatus">
        UPDATE report SET status = #{status} WHERE id = #{id}
    </update>

    <!-- 删除举报 -->
    <delete id="deleteReportById">
        DELETE FROM report WHERE id = #{id}
    </delete>

</mapper>
